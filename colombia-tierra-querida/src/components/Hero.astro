<section id="hero" class="relative w-full min-h-screen flex flex-col items-center justify-start pt-32 pb-40 bg-primary">
    <!-- Background Video -->
    <video 
        class="absolute inset-0 w-full h-full object-cover"
        autoplay 
        loop 
        muted 
        playsinline
        poster="/colombiavideo.mp4" 
    >
        <source src="/colombiavideo.mp4" type="video/mp4" />
    </video>
    

    <div class="relative z-10 text-center px-4 max-w-6xl mx-auto flex flex-col items-center pt-10">
        <!-- Subheading -->
        <h2 class="font-inter font-bold text-[16px] text-[#FFD738] mb-4 animate-slide-up">
            Celebremos juntos el 20 de Julio en el corazón de Milán
        </h2>

        <!-- Main Title (User requested 42px) -->
        <h1 class="font-anton text-[42px] md:text-[56px] lg:text-[64px] text-white tracking-wide leading-tight mb-6 uppercase drop-shadow-sm animate-fade-in">
            COLOMBIA, TIERRA QUERIDA
        </h1>

        <!-- Event Details -->
        <p class="font-inter font-medium text-white/90 text-[18px] mb-12 max-w-3xl leading-relaxed animate-slide-up">
            El domingo 20 de julio, celebremos con orgullo y patriotismo
            nuestra Fiesta Nacional en el Idroscalo de la Ciudad de Milán.<br/>
            Entrada gratuita para todos. ¡No faltes!
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col md:flex-row gap-6 w-full md:w-auto items-center animate-slide-up mb-2 relative z-40">
            <a 
                href="https://participa.colombiatierraquerida.it" 
                target="_blank"
                class="px-8 py-3 bg-[#DB1533] text-white font-inter font-bold text-[15px] rounded-full hover:brightness-110 transition-all hover:scale-105 shadow-md flex items-center gap-2"
            >
                Sponsors
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
            </a>
            <a 
                href="#agenda" 
                class="text-white font-inter font-medium text-[15px] hover:underline underline-offset-4 transition-all"
            >
                Ver Programa
            </a>
        </div>

        <!-- Overlapping Interactive Cards (x4) -->
        <!-- "group/grid" is used to trigger the hover effect on all children when entering the container -->
        <!-- Overlapping Interactive Cards (x4) -->
        <!-- Overlapping Interactive Cards (x4) -->
        <!-- "group/grid" is used to trigger the hover effect on all children when entering the container -->
        <div class="group/grid grid grid-cols-2 lg:grid-cols-4 gap-2 w-full translate-y-4 relative z-30 px-2 lg:px-0 max-w-6xl" style="perspective: 1200px;">
            
            <!-- Card 1: Default TL -> Hover BR -->
            <div class="h-64 md:h-80 rounded-tl-[100px] rounded-tr-[4px] rounded-br-[4px] rounded-bl-[4px] group-hover/grid:rounded-tl-[4px] group-hover/grid:rounded-br-[100px] transition-all duration-700 ease-[cubic-bezier(0.25,0.46,0.45,0.94)] overflow-hidden relative shadow-2xl hover:-translate-y-2">
                 <img src="/img-hero1.avif" alt="Musica" class="w-full h-full object-cover transition-transform duration-700 group-hover/grid:scale-105" />
                 <div class="absolute inset-0 bg-[#2E1065] opacity-20 group-hover/grid:opacity-0 transition-opacity duration-500 pointer-events-none"></div>
            </div>
            
            <!-- Card 2: Default BL -> Hover TR -->
            <div class="h-64 md:h-80 rounded-tl-[4px] rounded-tr-[4px] rounded-br-[4px] rounded-bl-[100px] group-hover/grid:rounded-bl-[4px] group-hover/grid:rounded-tr-[100px] transition-all duration-700 ease-[cubic-bezier(0.25,0.46,0.45,0.94)] overflow-hidden relative shadow-2xl hover:-translate-y-2">
                 <img src="/img-hero2.avif" alt="Gente" class="w-full h-full object-cover transition-transform duration-700 group-hover/grid:scale-105" />
                 <div class="absolute inset-0 bg-[#2E1065] opacity-20 group-hover/grid:opacity-0 transition-opacity duration-500 pointer-events-none"></div>
            </div>

            <!-- Card 3: Default TR -> Hover BL -->
            <div class="h-64 md:h-80 rounded-tl-[4px] rounded-tr-[100px] rounded-br-[4px] rounded-bl-[4px] group-hover/grid:rounded-tr-[4px] group-hover/grid:rounded-bl-[100px] transition-all duration-700 ease-[cubic-bezier(0.25,0.46,0.45,0.94)] overflow-hidden relative shadow-2xl hover:-translate-y-2">
                 <img src="/img-hero3.avif" alt="Video" class="w-full h-full object-cover transition-transform duration-700 group-hover/grid:scale-105" />
                 <div class="absolute inset-0 bg-[#2E1065] opacity-20 group-hover/grid:opacity-0 transition-opacity duration-500 pointer-events-none"></div>
            </div>

            <!-- Card 4: Default BR -> Hover TL -->
            <div class="h-64 md:h-80 rounded-tl-[4px] rounded-tr-[4px] rounded-br-[100px] rounded-bl-[4px] group-hover/grid:rounded-br-[4px] group-hover/grid:rounded-tl-[100px] transition-all duration-700 ease-[cubic-bezier(0.25,0.46,0.45,0.94)] overflow-hidden relative shadow-2xl hover:-translate-y-2">
                 <img src="/img-hero4.avif" alt="Danza" class="w-full h-full object-cover transition-transform duration-700 group-hover/grid:scale-105" />
                 <div class="absolute inset-0 bg-[#2E1065] opacity-20 group-hover/grid:opacity-0 transition-opacity duration-500 pointer-events-none"></div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Simple Custom Animations for Hero */
    @keyframes fade-in {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @keyframes slide-up {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-fade-in { animation: fade-in 1s ease-out forwards; }
    .animate-slide-up { animation: slide-up 1s ease-out 0.3s forwards; opacity: 0; }
</style>
