---
const events = [
  { time: "12:00", title: "Apertura de Puertas", category: "General" },
  { time: "14:00", title: "DJ Set Latino", category: "Música" },
  { time: "16:00", title: "Show de Danzas Folclóricas", category: "Cultura" },
  { time: "18:00", title: "Orquesta La 33 (Tributo)", category: "Concierto" },
  { time: "20:00", title: "Gran Artista Sorpresa", category: "Estelar" },
  { time: "22:00", title: "Cierre &uegos Pirotécnicos", category: "Show" }
];
---

<section id="agenda" class="py-20 bg-primary text-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="font-anton text-5xl text-secondary mb-4 uppercase">Programa</h2>
      <p class="font-inter text-xl text-white/80 max-w-2xl mx-auto">
        Una jornada llena de emoción minuto a minuto.
      </p>
    </div>

    <div class="max-w-4xl mx-auto relative border-l-4 border-accent ml-4 md:ml-auto">
      {events.map((event, index) => (
        <div class="mb-10 ml-8 relative group">
            <!-- Timeline dot -->
            <div class="absolute -left-[46px] top-2 w-6 h-6 bg-secondary rounded-full border-4 border-primary group-hover:scale-125 transition-transform"></div>
            
            <div class="bg-white/10 p-6 rounded-xl hover:bg-white/20 transition-colors backdrop-blur-sm border border-white/10">
                <span class="inline-block px-3 py-1 bg-accent text-white rounded-full text-xs font-bold font-inter mb-2">
                    {event.time}
                </span>
                <h3 class="font-anton text-3xl mb-2">{event.title}</h3>
                <p class="text-secondary font-inter font-medium">{event.category}</p>
            </div>
        </div>
      ))}
    </div>
  </div>
</section>
